<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/conn_ok"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/state"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:paddingBottom="15dp"/>

    <TextView
            android:text="hello world!"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_text" android:layout_alignParentStart="true"
            android:layout_marginStart="64dp" android:layout_centerVertical="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/setting_menu"
            android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:id="@+id/setting"
            android:layout_marginEnd="15dp"/>

</RelativeLayout>